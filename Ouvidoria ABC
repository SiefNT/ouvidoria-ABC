if exists(f'./dados.json'):
    with open(f'./dados.json') as d:
        try:
            protocol_dict = json.load(d)
        except:
            protocol_dict = {'dados': {},
                             'index': 0}
            with open(f'./dados.json', 'w') as f:
                f.write(json.dumps(protocol_dict))
else:
    protocol_dict = {'dados': {},
