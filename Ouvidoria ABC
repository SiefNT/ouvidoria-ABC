def menu():
    msg = ''
    while True:
        print('\033[4;34;36mðŸŽ“ Ouvidoria Universidade ABC.ðŸŽ“\033[m\n ')
        print('1) Listar todas as sugestÃµes ')
        print('2) Listar todas as reclamaÃ§Ãµes ')
        print('3) Listar todos os elogios ')
        print('4) Listar todas as manifestaÃ§Ãµes ')
        print('5) Enviar uma manifestaÃ§Ã£o ')
        print('6) Pesquisar protocolo por nÃºmero (ID) ')
        print('7) Sair\n')
        if msg != '':
            print(msg)
            msg = ''
        opcao = int(input('Escolha o nÃºmero correspondente ao que precisa :''\n'))
        if opcao == 1:
            listas_manifestacoes(1)
        elif opcao == 2:
            listas_manifestacoes(2)
        elif opcao == 3:
            listas_manifestacoes(3)
        elif opcao == 4:
            listas_manifestacoes(4)
        elif opcao == 5:
            add_manifestacao()
        elif opcao == 6:
            consulta_protocolo()
        elif opcao == 7:
            def progress_bar(done):
                print("\rProgress: [{0:50s}] {1:.1f}%".format('=' * int(done * 50), done * 100), end='')
            def test():
                for n in range(101):
                    progress_bar(n / 100)
                    time.sleep(0.005)
            test()
            print()
            print('Programa finalizado.')
            print('\033[4;32;32mðŸ¦— AtÃ© mais pequeno gafanhoto! ðŸ¦—\033[m')
            break
        else:
            msg = 'ðŸ‘»OpcÃ£o invÃ¡lida.ðŸ‘»'
menu()
